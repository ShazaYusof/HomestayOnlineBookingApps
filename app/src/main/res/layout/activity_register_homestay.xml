<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignhostActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/latar">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/custom_background">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">


    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="532dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivHomePic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:elevation="1dp"
                android:src="@drawable/ic_man">

            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="450dp"
                    android:layout_marginTop="85dp"
                    app:cardCornerRadius="10dp"
                    app:contentPaddingBottom="15dp"
                    app:contentPaddingLeft="15dp"
                    app:contentPaddingRight="15dp"
                    app:contentPaddingTop="15dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="429dp"
                        android:orientation="vertical">

                        <com.uncopt.android.widget.text.justify.JustifiedEditText
                            android:id="@+id/etTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginBottom="10dp"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="HomeStay Title"
                            android:inputType="textPersonName" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="0">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="145dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Price per night : RM"
                                    android:textColor="@color/hitam" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/priceNight"
                                    android:layout_width="90dp"
                                    android:layout_height="50dp"
                                    android:ems="10"
                                    android:inputType="number" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="0">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="145dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="No of Bedrooms :"
                                    android:textColor="@color/hitam" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etBed"
                                    android:layout_width="90dp"
                                    android:layout_height="50dp"
                                    android:ems="10"
                                    android:inputType="number" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="0">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="145dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="No Of Toilets :"
                                    android:textColor="@color/hitam" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etToilet"
                                    android:layout_width="90dp"
                                    android:layout_height="50dp"
                                    android:ems="10"
                                    android:inputType="number" />
                            </LinearLayout>
                        </LinearLayout>

                        <com.uncopt.android.widget.text.justify.JustifiedEditText
                            android:id="@+id/etAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="Address"
                            android:inputType="textPersonName" />

                        <!--<com.uncopt.android.widget.text.justify.JustifiedEditText-->
                        <!--android:id="@+id/etLink"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:ems="10"-->
                        <!--android:inputType="textPersonName"-->
                        <!--android:layout_marginBottom="10dp"-->
                        <!--android:hint="link picture"-->
                        <!--android:gravity="center"/>-->


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
            <Button
                android:id="@+id/btnReg"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="491dp"
                android:background="@drawable/custom_button"
                android:textColor="@color/putih"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>