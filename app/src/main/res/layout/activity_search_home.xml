<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchHomeActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/custom_background">

    <TextView
        android:id="@+id/viewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:text="WELCOME TO MALACCA iHOMESTAY"
        android:textColor="@color/putih"
        android:gravity="center"
        android:textSize="25dp"
        android:onClick="zoomAnimation"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/logosistem"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:onClick="rotateAnimation"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Search Homestay Price :RM"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/putih"
            android:gravity="center"
            android:orientation="vertical">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/find"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>